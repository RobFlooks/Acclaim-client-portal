{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "dist/server",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node"
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "client/**/*", "dist", "**/*.test.ts"]
}